<!-- app/views/news/index.html.erb -->
<%= stylesheet_link_tag 'news', media: 'all' %>
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">


<div class="news-container">
  <header>
    <h1>Latest News</h1>
    <form action="<%= posts_path %>" method="get" class="translation-form">
      <div class="form-group">
        <label for="from_language">Articles from:</label>
        <input type="text" id="from_language" name="from_language" placeholder="Enter language">
      </div>

      <div class="form-group">
        <label for="to_language">Translate to:</label>
        <input type="text" id="to_language" name="to_language" placeholder="Enter language">
      </div>

      <button type="submit">Translate</button>
    </form>
  </header>

  <ul class="news-list">
    <% @news.each do |article| %>
      <li class="news-item">
        <% if article['image_url'] %>
          <div class="news-image">
            <img src="<%= article['image_url'] %>" alt="Article Image">
          </div>
        <% end %>
        <div class="news-details">
          <h2 class="news-title"><%= article['title'] %></h2>
          <p class="news-description"><%= article['description'] %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
